#now-playing
  %h2
    = %{<a href="http://last.fm/user/#{@user}">#{@user}</a>}
    - if @tracks.now_playing?
      is Now Playing:
    - else
      Recently Listened to:

%h3
  %a{:href => "http://last.fm/music/#{@tracks.last_played_artist}/_/#{@tracks.last_played_track}"}
    = @tracks.last_played_track
  by
  %a{:href => "http://last.fm/music/#{@tracks.last_played_artist}"}
    = @tracks.last_played_artist

- @tracks.images.each do |img|
  - if img['size'] == 'extralarge'
    - unless img.content == ''
      %img{:src => img.content}

      %p
        %small
          Album artwork from
          %a(href="http://last.fm") last.fm
    - else
      %h3 No artwork found on last.fm

#discogs-releases
  %h3= %{"#{@tracks.last_played_track}" Appears on:}
  %ul
    - @search.results.each do |r|
      %li
        %a{:href => "http://www.discogs.com/viewimages?release=#{r.id}"}= r.title
        = %{(#{r.format})}

%h3 last.fm Tags
#tags= @tracks.tags.map { |t| tag_link(t)}.join(' ')

-#%p
  -#%a{:href => '#', :onclick => '$("#debug").toggle()'} debug
-##debug{:style => 'display:none'}
  -#%textarea(style="width:100%; height:200px")= @tracks.tracks
  -#%textarea(style="width:100%; height:200px")= @tracks.tags
