!!!
%html
  %head
    %title Cover Source: The easiest way to find album artwork.
    %link(rel="stylesheet" type="text/css" href="/coversrc.css")
    %link(rel="shortcut icon" href="/favicon.ico" type="image/x-icon")
  
  %body
    - if @user
      %h1#badge
        %a{:href => '/'} Cover Source
      #change-user-form
        %form(method="GET" action="/")
          %label(for="user")= "Not #{@user}?"
          %input(type="text" name="user" size="10")

    #centre
      - unless @user
        %h1#logo
          %a{:href => '/'} Cover Source: Artwork from Last.fm, Discogs and more!

      = yield

  %script{:src => "http://www.google.com/jsapi"}
  %script
    google.load("jquery", "1.3.2");
    google.load("jqueryui", "1.7.2");
  %script(type="text/javascript" src="/coversrc.js")

  - if production?
    :javascript
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));

      try {
      var pageTracker = _gat._getTracker("UA-828963-3");
      pageTracker._trackPageview();
      } catch(err) {}

      var is_ssl = ("https:" == document.location.protocol);
      var asset_host = is_ssl ? "https://s3.amazonaws.com/getsatisfaction.com/" : "http://s3.amazonaws.com/getsatisfaction.com/";
      document.write(unescape("%3Cscript src='" + asset_host + "javascripts/feedback-v2.js' type='text/javascript'%3E%3C/script%3E"));

    :javascript
      var feedback_widget_options = {};
      feedback_widget_options.display = "overlay";  
      feedback_widget_options.company = "cover_source";
      feedback_widget_options.placement = "left";
      feedback_widget_options.color = "#222";
      feedback_widget_options.style = "idea";
      var feedback_widget = new GSFN.feedback_widget(feedback_widget_options);
